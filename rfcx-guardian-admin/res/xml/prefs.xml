<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <CheckBoxPreference
	    android:key="verbose_logging"
	    android:title="Verbose Logging"
	    android:summary="Verbose Logging"
		android:enabled="true"
		android:defaultValue="true"/>

	<EditTextPreference
        android:key="device_guid"
        android:enabled="true"
	    android:title="Device GUID"
	    android:summary="Unique ID of Guardian"
		android:defaultValue=""/>

	<EditTextPreference
        android:key="device_token"
	    android:title="Device Token"
	    android:summary="Unique Token of Guardian"
        android:enabled="true"
		android:defaultValue=""/>
    
</PreferenceScreen>