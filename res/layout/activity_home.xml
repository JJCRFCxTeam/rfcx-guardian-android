<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home" >

    <Button
        android:id="@+id/bttnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/bttn_start" />

    <Button
        android:id="@+id/bttnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bttnStart"
        android:layout_centerHorizontal="true"
        android:text="@string/bttn_stop" />
    
    <Button
        android:id="@+id/bttnPowerOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bttnStop"
        android:layout_centerHorizontal="true"
        android:text="@string/bttn_power_on" />
    
    <Button
        android:id="@+id/bttnPowerOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bttnPowerOn"
        android:layout_centerHorizontal="true"
        android:text="@string/bttn_power_off" />

</RelativeLayout>