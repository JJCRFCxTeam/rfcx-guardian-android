<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
	    android:key="verbose_logging"
	    android:title="Verbose Logging"
	    android:summary="Verbose Logging"
		android:enabled="true"
		android:defaultValue="false"/>
    	
	<CheckBoxPreference
	    android:key="allow_wifi"
	    android:title="Allow WiFi"
	    android:summary="Enable WiFi in/out of AirplaneMode"
        android:enabled="true"
		android:defaultValue="false"/>

	<CheckBoxPreference
	    android:key="allow_bluetooth"
	    android:title="Allow Bluetooth"
	    android:summary="Enable Bluetooth in/out of AirplaneMode"
        android:enabled="true"
		android:defaultValue="false"/>
	
 	<EditTextPreference
        android:key="api_domain"
        android:title="API Protocol/Address"
        android:summary="Domain/Protocol for API calls"
        android:enabled="true"
        android:defaultValue="https://api.rfcx.org" />
	
	<EditTextPreference
        android:key="api_checkin_interval"
        android:title="API CheckIn Interval"
        android:summary="How often to check-in to API (seconds)"
	    android:inputType="number"
        android:enabled="true"
        android:defaultValue="150"/>
	
	<EditTextPreference
        android:key="service_monitor_interval"
        android:title="Service Monitor Interval"
        android:summary="How often should we check if services are running?"
	    android:inputType="number"
        android:enabled="true"
        android:defaultValue="5"/>
	


	<CheckBoxPreference
	    android:key="transcode_as_aac"
	    android:title="Encode as AAC (vs. FLAC)"
	    android:summary="Record audio, then transcode to lossy AAC"
        android:enabled="true"
		android:defaultValue="false"/>	
	
	<CheckBoxPreference
	    android:key="capture_as_aac"
	    android:title="Capture as AAC"
	    android:summary="Record audio directly to lossy AAC"
        android:enabled="true"
		android:defaultValue="true"/>
	
