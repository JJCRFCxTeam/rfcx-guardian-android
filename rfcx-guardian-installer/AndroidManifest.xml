<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.rfcx.guardian.installer"
    android:versionCode="1"
    android:versionName="0.2.4" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.CALL_PHONE" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.SET_TIME_ZONE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.BLUETOOTH" />
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<uses-permission android:name="org.rfcx.guardian.READ" />
	<uses-permission android:name="org.rfcx.guardian.WRITE" />
	<permission android:name="org.rfcx.guardian.READ" android:protectionLevel="normal" />
	<permission android:name="org.rfcx.guardian.WRITE" android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_guardian"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="org.rfcx.guardian.installer.RfcxGuardian"
        >

        <service android:name="org.rfcx.guardian.installer.service.ApiCheckVersionIntentService" />
        <service android:name="org.rfcx.guardian.installer.service.RebootIntentService" />
        <service android:name="org.rfcx.guardian.installer.service.DownloadFileService" />
        <service android:name="org.rfcx.guardian.installer.service.ApiCheckVersionService" />
        <service android:name="org.rfcx.guardian.installer.service.InstallAppService" />

        <activity
            android:name="org.rfcx.guardian.installer.activity.PrefsActivity"
            android:label="@string/menu_prefs" />

        <activity
            android:name="org.rfcx.guardian.installer.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

         <receiver android:name="org.rfcx.guardian.installer.receiver.BootReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>

    </application>

</manifest>
